<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Menu</title>
</head>
<body>
  <h1>Edit Menu</h1>

  <form action="/menus/edit/<%= menu.id %>" method="post">
    <p>
      Name: <br>
      <input type="text" name="name" value="<%= menu.name %>">
    </p>

    <p>
      Category: <br>
      <select name="CategoryId">
        <% categories.forEach(el => { %>
          <% if (el.id == menu.CategoryId) { %>
          <option value="<%= el.id %>" selected><%= el.name %></option>
          <% } else { %>
          <option value="<%= el.id %>"><%= el.name %></option>
          <% } %>
        <% }) %>
      </select>
    </p>

    <p>
      Stock: <br>
      <input type="number" name="stock" value="<%= menu.stock %>">
    </p>

    <p>
      Price: <br>
      <input type="number" name="price" value="<%= menu.price %>">
    </p>

    <p>
      Created At: <br>
      <input type="date" name="createdAt" value="2022-08-08">
    </p>

    <p>
      <input type="submit" value="Save">
    </p>
  </form>
</body>
</html>